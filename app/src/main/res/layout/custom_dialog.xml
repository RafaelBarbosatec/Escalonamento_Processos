<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_processos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:text="Processo:"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tv_processos">

        <EditText
            android:id="@+id/ed_t_chegada"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="T. de chegada"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ed_t_exe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:hint="T. de Execução"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tv_processos">

        <EditText
            android:id="@+id/ed_deadline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Deadline"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ed_prioridade"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:hint="Prioridade"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_excluir"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bg_white"
            android:text="EXCLUIR"/>
        <Button
            android:id="@+id/bt_adicionar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button"
            android:text="ADICIONAR"/>
    </LinearLayout>

</LinearLayout>